<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:id="@+id/text_view_first_step"
        android:textColor="@color/colorPrimary"
        android:text="@string/first_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:id="@+id/text_view_second_step"
        android:textColor="@color/colorPrimary"
        android:text="@string/second_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@+id/text_view_first_step"
        android:layout_marginTop="10dp"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="10dp"
        android:id="@+id/button_load_first_file"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/load_first_file" />

    <Button
        android:layout_below="@id/text_view_second_step"
        android:layout_marginTop="10dp"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"
        android:layout_marginEnd="10dp"
        android:id="@+id/button_load_second_file"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/load_second_file" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_load_first_file"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginEnd="5dp"
            android:background="@color/colorYellow"
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:text="@string/generate_first_file" />

        <Button
            android:layout_marginEnd="5dp"
            android:background="@color/colorYellow"
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:text="@string/generate_second_file" />



        <Button
            android:background="@color/colorYellow"
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:text="@string/generate_third_file" />

    </LinearLayout>


</RelativeLayout>